# WhatsApp Cloud API Configuration
# Copy this file to .env and fill in your actual values

# Your WhatsApp Business API Token from Facebook Developer Portal
WHATSAPP_TOKEN=YOUR_ACCESS_TOKEN_HERE

# Your Phone Number ID from Facebook Developer Portal
PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID_HERE

# Verify token for webhook (you can set this to any string you want)
VERIFY_TOKEN=your_verify_token_here

# Port for webhook server
LISTEN_PORT=3000

# Test recipient phone number (include country code, e.g., 255757902132)
TEST_RECIPIENT=RECIPIENT_PHONE_NUMBER_HERE
